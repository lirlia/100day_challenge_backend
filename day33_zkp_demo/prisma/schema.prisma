model ProofSession {
  id         Int      @id @default(autoincrement())
  secretHash String
  createdAt  DateTime @default(now())
  logs       ProofLog[]
}

model ProofLog {
  id         Int      @id @default(autoincrement())
  session    ProofSession @relation(fields: [sessionId], references: [id])
  sessionId  Int
  challenge  String
  response   String
  isSuccess  Boolean
  createdAt  DateTime @default(now())
}
